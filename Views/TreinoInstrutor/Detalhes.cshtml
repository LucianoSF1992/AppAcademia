@using AppAcademia.Helpers

@model List<AppAcademia.ViewModels.TreinoStatusViewModel>

@{
    var aluno = ViewBag.Aluno as AppAcademia.Models.Aluno;
}

<h2>Treinos do Aluno</h2>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}



<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Dia da Semana</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var treino in Model)
        {
            <tr>
                <td>@treino.DiaSemana.ToPtBr()
                </td>

                <td>
                    @if (treino.ExerciciosConcluidos == treino.TotalExercicios && treino.TotalExercicios > 0)
                    {
                        <span class="badge bg-success">Concluído</span>
                    }
                    else if (treino.ExerciciosConcluidos > 0)
                    {
                        <span class="badge bg-warning text-dark">Em andamento</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Não iniciado</span>
                    }
                </td>

                <td>
                    <a asp-action="DetalhesTreino" asp-route-id="@treino.TreinoId" class="btn btn-sm btn-primary">
                        Ver
                    </a>

                    @if (!treino.Concluido && !treino.EmAndamento)
                    {
                        <a asp-action="Editar" asp-route-id="@treino.TreinoId" class="btn btn-sm btn-warning">
                            Editar
                        </a>
                    }

                    @if (treino.PodeExcluir)
                    {
                        <a asp-action="Delete" asp-route-id="@treino.TreinoId" class="btn btn-sm btn-danger"
                            onclick="return confirm('Deseja realmente excluir este treino?')">
                            Excluir
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary mt-3">
    Voltar
</a>