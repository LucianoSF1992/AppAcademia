@model List<AppAcademia.ViewModels.TreinoStatusViewModel>

@{
    var aluno = ViewBag.Aluno as AppAcademia.Models.Aluno;
}

<h2>Treinos do Aluno</h2>

@if (aluno != null)
{
    <p><strong>Aluno:</strong> @aluno.Usuario?.Nome</p>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Dia da Semana</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var treino in Model)
        {
            <tr>
                <td>@treino.DiaSemana</td>

                <td>
                    @if (treino.Concluido)
                    {
                        <span class="badge bg-success">Concluído</span>
                    }
                    else if (treino.EmAndamento)
                    {
                        <span class="badge bg-warning text-dark">Em andamento</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Não iniciado</span>
                    }
                </td>

                <td>
                    <a asp-action="DetalhesTreino" asp-route-id="@treino.TreinoId" class="btn btn-sm btn-primary">
                        Ver
                    </a>

                    @* Botões futuros *@
                    @*
                    <a asp-action="Edit"
                       asp-route-id="@treino.TreinoId"
                       class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    *@
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary mt-3">
    Voltar
</a>