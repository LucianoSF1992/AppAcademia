@using Microsoft.AspNetCore.Http
@{
    var controllerAtual = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - AppAcademia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <!-- Logo / Nome do sistema -->
                @if (Context.Session.GetString("Perfil") == "Admin")
                {
                    <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">
                        AppAcademia
                    </a>
                }
                else if (Context.Session.GetString("Perfil") == "Instrutor")
                {
                    <a class="navbar-brand" asp-controller="Instrutor" asp-action="Dashboard">
                        AppAcademia
                    </a>
                }
                else if (Context.Session.GetString("Perfil") == "Aluno")
                {
                    <a class="navbar-brand" asp-controller="Aluno" asp-action="Index">
                        AppAcademia
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Auth" asp-action="Login">
                        AppAcademia
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- Menu esquerdo (exemplo futuro) -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (Context.Session.GetString("Perfil") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    🏠 Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="InstrutorAdmin" asp-action="Index">
                                    Instrutores
                                </a>
                            </li>
                        }

                        @if (Context.Session.GetString("Perfil") == "Instrutor")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Instrutor" asp-action="Dashboard">
                                    Dashboard
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AlunoInstrutor" asp-action="Index">
                                    Alunos
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="TreinoInstrutor" asp-action="Index">
                                    Treinos
                                </a>
                            </li>
                        }

                        @if (Context.Session.GetString("Perfil") == "Aluno")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Aluno" asp-action="Dashboard">
                                    🏠 Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(controllerAtual == "Aluno" ? "active" : "")" asp-controller="Aluno"
                                    asp-action="Index">
                                    Meu Treino
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Aluno" asp-action="Historico">
                                    Histórico
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Aluno" asp-action="Desempenho">
                                    📈 Desempenho
                                </a>
                            </li>
                        }
                    </ul>


                    <!-- Usuário logado -->
                    @if (Context.Session.GetString("Nome") != null)
                    {
                        <div class="d-flex align-items-center text-white">
                            <span class="me-3">
                                Olá, <strong>@Context.Session.GetString("Nome")</strong>
                            </span>

                            <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Logout">
                                Sair
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-fill container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted small py-3 mt-auto border-top">
        © 2026 - AppAcademia · Desenvolvido por
        <a href="" target="_blank" class="text-decoration-none">
            Luciano Silva Ferreira
        </a>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>